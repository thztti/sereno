
{
  "name": "Sereno",
  "description": "Sereno makes sure you're reading stories you care about most. Haters-free.",
  "version": "0.1",
  "permissions": [
    "activeTab",
    "*://*/*"
  ],
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": ""
  },
  "manifest_version": 2,
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" }
}